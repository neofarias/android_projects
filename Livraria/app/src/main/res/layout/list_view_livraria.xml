<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingTen">

        <ImageView
            android:id="@+id/imageTipoLivraria"
            android:layout_width="@dimen/imageBookWidth"
            android:layout_height="@dimen/imageBookHeight"
            android:layout_weight="0.11"
            android:padding="@dimen/paddingFour"
            android:src="@drawable/ic_book"
            android:layout_marginRight="@dimen/paddingTen"/>

        <ImageView
            android:id="@+id/imageMapsLivraria"
            android:layout_width="@dimen/imageBookWidth"
            android:layout_height="@dimen/imageBookHeight"
            android:layout_weight="0.11"
            android:padding="@dimen/paddingFour"
            android:layout_below="@+id/imageTipoLivraria"
            android:layout_marginRight="@dimen/paddingTen"/>

        <TextView
            android:id="@+id/nameLivraria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/imageTipoLivraria"
            android:textSize="@dimen/paddingTwenty"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/eventoLivraria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageTipoLivraria"
            android:layout_below="@id/nameLivraria"
            android:textSize="@dimen/paddingFourteen"
            android:textColor="@color/colorAddress"/>

        <TextView
            android:id="@+id/enderecoEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageTipoLivraria"
            android:layout_below="@id/eventoLivraria"
            android:textSize="@dimen/paddingTwelve"
            android:textColor="@color/colorType"/>

    </RelativeLayout>
</LinearLayout>